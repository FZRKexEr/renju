{
  "name": "renju",
  "productName": "Renju",
  "version": "0.60.0",
  "description": "An elegant Gomoku/五子棋 board and SGF editor for a more civilized age.",
  "author": "Yichuan Shen <shen.yichuan@gmail.com>",
  "homepage": "http://sabaki.yichuanshen.de",
  "license": "MIT",
  "main": "./src/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/FZRKexEr/renju"
  },
  "bugs": {
    "url": "https://github.com/FZRKexEr/renju/issues"
  },
  "build": {
    "appId": "com.fzrkexer.renju",
    "copyright": "Copyright © 2025 FZRKexEr",
    "compression": "normal",
    "linux": {
      "target": "AppImage",
      "category": "Game",
      "artifactName": "renju-v${version}-linux-${arch}.${ext}"
    },
    "mac": {
      "target": [
        "7z"
      ],
      "identity": null,
      "category": "public.app-category.board-games",
      "artifactName": "renju-v${version}-mac-${arch}.${ext}"
    },
    "win": {
      "artifactName": "renju-v${version}-win.exe"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    },
    "fileAssociations": [
      {
        "ext": "sgf",
        "name": "SGF",
        "description": "Smart Game Format"
      },
      {
        "ext": "ngf",
        "name": "NGF",
        "description": "wBaduk NGF"
      },
      {
        "ext": "gib",
        "name": "GIB",
        "description": "Tygem GIB"
      },
      {
        "ext": "ugf",
        "name": "UGF",
        "description": "PandaNET UGF"
      }
    ],
    "files": [
      "**/*",
      "!**/{.github,.c9,scss,docs,test,tests,devtools,plugins,examples}${/*}",
      "!ci${/*}",
      "!src/{components,modules}${/*}",
      "!engines",
      "!node_modules",
      "node_modules/@primer/octicons/build/svg/*",
      "node_modules/@sabaki/shudan/css/*",
      "node_modules/@sabaki/i18n/**/*",
      "node_modules/dolm/**/*",
      "node_modules/{iconv-lite,safer-buffer}/**/*",
      "node_modules/pikaday/css/*"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "proseWrap": "always",
    "trailingComma": "all",
    "arrowParens": "always"
  },
  "dependencies": {
    "@mariotacke/color-thief": "^3.0.1",
    "@primer/octicons": "^9.6.0",
    "@sabaki/boardmatcher": "^1.2.0",
    "@sabaki/i18n": "0.51.1-1",
    "@sabaki/immutable-gametree": "^1.9.4",
    "@sabaki/sgf": "^3.4.7",
    "@sabaki/shudan": "^1.7.1",
    "argv-split": "^2.0.1",
    "classnames": "^2.2.6",
    "dolm": "^0.7.3-beta",
    "fix-path": "<6.0.0",
    "iconv-lite": "^0.7.2",
    "jschardet": "^3.0.0",
    "natsort": "^2.0.2",
    "pikaday": "^1.8.0",
    "preact": "^10.28.3",
    "react-markdown": "^10.1.0",
    "remark-breaks": "^3.0.2",
    "rimraf": "^6.1.2",
    "uuid": "^7.0.3",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "ansi-colors": "^4.1.3",
    "concurrently": "^7.3.0",
    "electron": "^37.10.3",
    "electron-builder": "^26.4.0",
    "minizlib": "^3.1.0",
    "mocha": "^10.0.0",
    "onchange": "^7.1.0",
    "prettier": "3.8.1",
    "tmp": "^0.2.5",
    "tsx": "^4.0.0",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1"
  },
  "overrides": {
    "minizlib": "^3.1.0"
  },
  "scripts": {
    "test": "mocha --require tsx",
    "start": "electron ./",
    "bundle": "webpack --mode production",
    "build": "npm run bundle && electron-builder --dir",
    "format-base": "prettier \"**/*.{js,html,md}\" \"!{{dist,i18n}/**,bundle.js*}\"",
    "format-check": "npm run format-base -- --check",
    "format": "npm run format-base -- --write",
    "watch-format": "onchange \"**/*.{js,html,md}\" \"!{{dist,i18n}/**,bundle.js*}\" -- prettier --write {{changed}}",
    "watch": "concurrently \"webpack --mode development --watch\" \"npm run watch-format\"",
    "dist:macos": "npm run bundle && electron-builder -m --x64 --arm64",
    "dist:linux": "npm run bundle && electron-builder -l --ia32 --x64 && node ./ci/mv.js ./dist/renju-vx.x.x-linux-i386.AppImage ./dist/renju-vx.x.x-linux-ia32.AppImage && node ./ci/mv.js ./dist/renju-vx.x.x-linux-x86_64.AppImage ./dist/renju-vx.x.x-linux-x64.AppImage",
    "dist:arm64": "npm run bundle && electron-builder -l --arm64",
    "dist:win32": "npm run bundle && electron-builder -w --ia32 && node ./ci/mv.js ./dist/renju-vx.x.x-win.exe ./dist/renju-vx.x.x-win-ia32-setup.exe",
    "dist:win64": "npm run bundle && electron-builder -w --x64 && node ./ci/mv.js ./dist/renju-vx.x.x-win.exe ./dist/renju-vx.x.x-win-x64-setup.exe",
    "dist:win32-portable": "npm run bundle && electron-builder -w portable --ia32 && node ./ci/mv.js ./dist/renju-vx.x.x-win.exe ./dist/renju-vx.x.x-win-ia32-portable.exe",
    "dist:win64-portable": "npm run bundle && electron-builder -w portable --x64 && node ./ci/mv.js ./dist/renju-vx.x.x-win.exe ./dist/renju-vx.x.x-win-x64-portable.exe",
    "dist:win": "npm run dist:win32 && npm run dist:win64 && npm run dist:win32-portable && npm run dist:win64-portable",
    "i18n": "node ./ci/createI18n.js"
  }
}
